<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register Your Shop</title>
  <link rel="stylesheet" href="/css/form.css" />
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #f2f2f2;
      padding: 20px;
    }

    .form-container {
      max-width: 500px;
      margin: auto;
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .form-container h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    input, button {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 5px;
      border: 1px solid #ccc;
      font-size: 16px;
    }

    .map-btn {
      background-color: #2196F3;
      color: white;
      border: none;
      margin-bottom: 20px;
      cursor: pointer;
    }

    .map-btn:hover {
      background-color: #1976D2;
    }

    button[type="submit"] {
      background-color: #4CAF50;
      color: white;
      font-weight: 600;
      cursor: pointer;
    }

    button[type="submit"]:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>

  <div class="form-container">
    <h2>Register Your Medical Shop</h2>

    <form action="/admin/register" method="POST" onsubmit="return checkLocation()">
      <input type="text" name="name" placeholder="Shop Name" required />
      <input type="email" name="email" placeholder="Email" required />
      <input type="text" name="address" placeholder="Address" required />
      <input type="password" name="password" placeholder="Password" required />

      <!-- ‚úÖ Hidden GPS fields -->
      <input type="hidden" name="lat" id="lat" />
      <input type="hidden" name="lng" id="lng" />

      <!-- üåç Google Maps button -->
      <!-- <button type="button" class="map-btn" onclick="openGoogleMap()">üìç Show Location on Google Maps</button> -->

      <button type="submit">Register</button>
    </form>
  </div>

  <script>
    let latitude = null;
    let longitude = null;

    window.onload = () => {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(pos => {
          latitude = pos.coords.latitude;
          longitude = pos.coords.longitude;

          // set to hidden fields
          document.getElementById('lat').value = latitude;
          document.getElementById('lng').value = longitude;
        }, () => {
          alert("‚ùå Location permission denied.");
        });
      } else {
        alert("‚ùå Geolocation not supported.");
      }
    };

    function checkLocation() {
      const lat = document.getElementById('lat').value;
      const lng = document.getElementById('lng').value;

      if (!lat || !lng) {
        alert("‚ö†Ô∏è Please wait for your location to load.");
        return false;
      }
      return true;
    }

    function openGoogleMap() {
      if (latitude && longitude) {
        const url = `https://www.google.com/maps?q=${latitude},${longitude}`;
        window.open(url, '_blank');
      } else {
        alert("‚ö†Ô∏è Location not ready yet. Please wait...");
      }
    }
  </script>

</body>
</html>
